@model InAndOut.Models.ViewModels.ExpenseVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseName" class="control-label"></label>
                <input asp-for="Expense.ExpenseName" class="form-control" />
                <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Ammount" class="control-label"></label>
                <input asp-for="Expense.Ammount" class="form-control" />
                <span asp-validation-for="Expense.Ammount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseType" class="control-label"></label>
                <select asp-for="Expense.ExpenseTypeId" asp-items="@Model.TypeDropDown" class="form-control" >
                    <option selected>--Select Expense Type--</option>
                </select>
                <span asp-validation-for="Expense.ExpenseTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<div>
    <a asp-action="Index" class="btn btn-dark">Back to Expenses</a>
</div>

